<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_crop_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"> android:background=&quot;@android:color/transparent&quot; &gt; 
    <RelativeLayout
        android:id="@+id/custom_action_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true">
        <TextView
            android:textSize="22sp"
            android:id="@+id/header_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Cancel"
            android:layout_alignParentLeft="true"/>
        <TextView
            android:textSize="22sp"
            android:id="@+id/header_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:text="Done"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <com.theartofdev.edmodo.cropper.CropImageView
        android:id="@+id/cropImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/custom_action_layout"
        android:layout_alignWithParentIfMissing="true"/>
</RelativeLayout>
